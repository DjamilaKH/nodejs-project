{% extends 'layout.twig' %}

{% block body %}
	<a href="/user/addform">Ajouter</a>
	<table border="1">
		<thead>
			<th>UserName</th>
			<th>Password</th>
			<th>Email</th>
			<th>FullName</th>
			<th>Action</th>
		</thead>
		<tbody>
			{% for item in data %}
				<tr>
					<td>
						{{ item.username}}
					</td>
					<td>
						{{ item.password }}
					</td>
					<td>
						{{ item.email }}
					</td>
					<td>
						{{ item.fullname }}
					</td>

					<td>
						<a href="/user/delete/{{ item._id }}">Supprimer</a>

						<a href="/user/updateForm/{{ item._id }}">Update</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
